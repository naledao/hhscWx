@import "../../fonts/goodsicon/iconfont.wxss";
.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:space-between;
    padding:0;
    margin:0;
    box-sizing: border-box;
    background-size:cover;
    position: relative;
    background-color: var(--bottom-color);
    

} 

.container .goods-box .search-box{
  height: 5vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--back-color);
  position: sticky;
  top:0;
  z-index: 99999;
  box-sizing: border-box;
}

.container .goods-box .search-box .s-inner{
  width: 98%;
  height:4vh;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  border:1px solid white;
}

.container .goods-box .search-box .s-inner input{
  width: 94%;
  height:4vh;
  font-size:small;
  color:black;
  border-radius: 3vw;
  padding-left:20rpx;
}

.container .goods-box .search-box .s-inner button{
  width: 6%;
  height: 4vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: large;
  margin:0;
  background-color: var(--back-color);
  color:white;
  border-radius: 20rpx;
}



.container .c-navigator{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: fit-content;
  background-color: var(--back-color);
  align-items: center;
}



.container .navigator{
    position: fixed;
    bottom: 0;
    display: flex;
    height:5vh;
    width: 100%;
    backdrop-filter: blur(10px);
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.navigator .change-page{
    width: 25%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0;
}

.navigator .change-page image{
    width: 50%;
    height: auto;
}





.container .goods-box{
    min-height: 70vh;
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-bottom:12vh;
    background-color: var(--bottom-color);
}

/* 分类区定义 */
.container .c-navigator .fixed-sec{
  display: flex;
  justify-content: space-around;
  height: 25vh;
  width: 100%;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin:10px 0;
}

.container .c-navigator .fixed-sec .goods-promotion{
  height: 25vh;
  width: 96%;
  position: relative;
}

.container .c-navigator .fixed-sec .goods-promotion swiper-item{
  position: relative;
  border-radius: 10rpx;
}

.container .c-navigator .fixed-sec .goods-promotion swiper-item image{
  width: 100%;
  border-radius: 10rpx;
}

/* 分类区 */
.container .goods-box .sticky-sort{
  position: sticky;
  top:calc(5vh - 1px);
  display: flex;
  justify-content: space-between;
  height: 6vh;
  width: 100%;
  align-items: center;
  z-index:999999;
  background-color: var(--back-color);
  padding:0 10px;
  box-sizing: border-box;
}

.container .goods-box .sticky-sort .sort{
  height: 80%;
  width: fit-content;
  border-radius: 15rpx;
  white-space: nowrap;
  padding:0;
  margin:0;
  width: 15%;
  color:var(--theme-color);
  font-size: large;
  font-weight: bold;
  background-color: var(--button-unselect-color);
  
}

.container .goods-box .sticky-sort .sort text{
  width: 96%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:small;
  font-weight: normal;
  text-align: center;
}



/* 商品盒子 */
.container .goods-box .exhibition{
    min-height: 65vh;
    width: 96%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top:20rpx;
}

.container .goods-box .exhibition .leftbox,.container .goods-box .exhibition .rightbox{
    min-height: 65vh;
    width: 49%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.container .goods-box .exhibition .leftbox{
  align-items: flex-start;
}

.container .goods-box .exhibition .single-good{
    height: fit-content;
    width:98%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
    overflow: hidden;
    background-color: var(--theme-color);
    margin-bottom:20rpx;
    box-sizing: border-box;
}

.container .goods-box .exhibition .recommend{
    background-color: black;
    border:5px solid black;
}

.container .goods-box .exhibition .single-good .info .n-recommend{
  color: black;
  font-size: medium;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;    
  color:#CD7F32;
}
.container .goods-box .exhibition .single-good image{
    width: 100%;
    border-top-left-radius: 20rpx;
    border-top-left-radius: 20rpx;
}

.container .goods-box .exhibition .single-good .info{
    display: flex;
    height: max-content;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    box-sizing: border-box;
    padding-left: 10rpx;
    padding-bottom:8rpx;
}

.container .goods-box .exhibition .single-good .info .name{
    color: black;
    font-size: medium;
    white-space: nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    margin-bottom: 10rpx;    
}

.container .goods-box .exhibition .single-good .info .price-box{
    display: flex;
    width: 100%;
    height: 3vh;
    display: flex;
    align-items: center;
    position: relative;
    justify-content: space-between;
    margin-bottom: 5rpx;  
}

.container .goods-box .exhibition .single-good .info .price-box .price{
    color:var(--price-color);
    font-size:40rpx;
    
}

.container .goods-box .exhibition .single-good .info .price-box .biaozhi{
    color:var(--price-color);
    font-size: small;
}


.container .goods-box .exhibition .single-good .info  .w-price{
    width: 20%;
    color:#B3886B;
    font-size: small;
    height: fit-content;
    width: 20%;
    border:1px solid #B3886B;
    display: flex;
    justify-content: center;
    border-radius: 10rpx;
    margin-right: 5px;
    
}

.container .goods-box .exhibition .single-good .info .mark-box{
  width:100%;
  height:fit-content;
  display: flex;
  justify-content: start;
  align-items: center;
  color:var(--theme-color);
  margin-top: 2%;
  font-size: small;
}


.container .goods-box .exhibition .single-good .info .mark{
  width: max-content;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding:0 10rpx;
  height: fit-content;
  font-size: small;
  color:white;
  background-color: var(--back-color);
}

.container .goods-box .tip{
    color:#756f6f
}